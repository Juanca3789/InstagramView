<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main">
        <ImageButton
            android:id="@+id/camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_cam">
        </ImageButton>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="40dp"
            android:scaleType="fitStart"
            android:translationY="4dp"
            android:src="@drawable/instagram_text">
        </ImageView>
        <ImageButton
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_tv">
        </ImageButton>
        <ImageButton
            android:id="@+id/messenger"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_messenger">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/footer">
        <LinearLayout
            android:id="@+id/histories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/stories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="92dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/new_history"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/add_history_image" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mi historia"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="300"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="92dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/history_1"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/unviewed_history" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historia 1"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="300"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="92dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/history_2"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/unviewed_history" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historia 2"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="300"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="92dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/univewed_history"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/viewed_history" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Historia 3"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="300"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCCCC"/>
            <LinearLayout
                android:id="@+id/posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical">
                    <ImageButton
                        android:id="@+id/mini_history"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitStart"
                        android:src="@drawable/unviewed_history" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="300"
                        android:text="PublicaciÃ³n 1"/>
                    <ImageButton
                        android:id="@+id/info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitEnd"
                        android:src="@drawable/info_icon"/>
                </LinearLayout>
                <WebView
                    android:id="@+id/webView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="6dp">
                    <ImageButton
                        android:id="@+id/like"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_hearth">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/comments"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_comments">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_share">
                    </ImageButton>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="8dp"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_margin="4dp"
                            android:background="@android:color/holo_blue_light"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:contentDescription="Punto activo"
                            android:layout_marginBottom="4dp"
                            android:shape="oval" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_margin="4dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:contentDescription="Punto pasivo" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_margin="4dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:contentDescription="Punto pasivo" />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_margin="4dp"
                            android:background="#CCCCCC"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:contentDescription="Punto pasivo" />
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/save"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_save">
                    </ImageButton>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Autor"
                        android:fontFamily="@font/instagram_sans_family"
                        android:fontWeight="700"
                        android:textSize="10sp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_home">
        </ImageButton>
        <ImageButton
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_search">
        </ImageButton>
        <ImageButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_video">
        </ImageButton>
        <ImageButton
            android:id="@+id/video"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_add">
        </ImageButton>
        <ImageButton
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_live">
        </ImageButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>